<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/timbratureMainColor</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>


    <style name="LoginTextEditTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/timbratureMainColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="ProgressBarOnWhiteBackgroundTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/darkGrayColor</item>
    </style>

</resources>
